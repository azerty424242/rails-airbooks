<h1>Your Profile </h1>

<h2>Rented Books</h2>
<ul>
  <% @rented_books.each do |book| %>
    <li><%= book.title %> by <%= book.author_name %></li>
  <% end %>
</ul>

<h2>Your Reservations</h2>
<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Begin Date</th>
      <th>End Date</th>
      <th>Total Price</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.book.title %></td>
        <td><%= reservation.begin_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= reservation.total_price %></td>
        <td><%= reservation.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
