<div class="background-container">
  <div class="background-image"></div>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-5 order-md-1">
        <div class="book-poster">
          <%= image_tag @book.cover.url, alt: "Cover Book", class: "img-fluid book-image" %>
        </div>
      </div>

      <div class="col-md-7 order-md-2">
        <div class="book-title">
          <h1><%= @book.title %></h1>
        </div>
        <div class="book-info">
          <div class="vertical-divider"></div>
          <p class="book-author"><strong>Auteur:</strong> <%= @book.author_name %></p>
          <p><strong>Année de publication:</strong> <%= @book.published_year %></p>
          <p><strong>Description:</strong> <%= @book.description %></p>
          <p><strong>Catégorie:</strong> <%= @book.category %></p>
          <p><strong>Prix par jour:</strong> <%= @book.price_per_day %> EUR</p>
        </div>
      </div>
    </div>
  </div>
</div>
